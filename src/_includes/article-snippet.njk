<li>
    <article class="snippet">
        <a href="{{ post.url }}" class="snippet__image">
            <div class="snippet-img-container">
                <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}" class="snippet__image" title="{{ post.data.title }}">
            </div>
        </a>
        <h3 class="snippet__title" title="{{ post.data.title }}"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
        <p class="snippet__meta">by <span>{{ post.data.author }}</span> on <span>{{ post.date | postDate }}</span></p>
        <p class="snippet__body">{{ post.data.description }}</p>
        <a href="{{ post.url }}" class="snippet__btn" title="Continue Reading">continue reading</a>
    </article>
</li>