---
layout: 'base.njk'
---

<article class="main-article">
    <div class="container container--narrow flow">
        <h2 class="article-title">
            {{ title }}
        </h2>

        {{ content | safe }}

        <figure class="main-article__figure">
            <img src="{{ image  }}" alt="{{ imageAlt }}" title="{{ imageAlt }}">
            <figcaption>
                {{ imageAlt }}
            </figcaption>
        </figure>
    </div>
</article>