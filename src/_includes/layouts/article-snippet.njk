<li>
    <article class="works-snippet">
        <a href="{{ post.url }}" class="works-snippet__image" aria-label="Read more about {{ post.data.title }}">
            <div class="works-snippet-img-container">
                <img class="snippet__image" 
                    src="{{ post.data.gallery[0].url }}" 
                    alt="{{ post.data.gallery[0].alt }}" 
                    title="{{ post.data.gallery[0].title }}" 
                    loading="lazy">
            </div>
        </a>
        <h3 class="works-snippet__title">
            <a href="{{ post.url }}" title="{{ post.data.title }}" aria-label="Read more about {{ post.data.title }}">{{ post.data.title }}</a>
        </h3>
        <p class="snippet__meta" aria-label="Date published"><span>{{ post.date | postDate }}</span></p>
        <p class="snippet__body" aria-label="Blog post description">{{ post.data.description }}</p>
    </article>
</li>