<li data-tags="{{ post.data.tags }}">
    <article class="works-snippet">
        <a href="{{ post.url }}" class="works-snippet__image" aria-label="Read more about {{ post.data.title }}">
            <div class="works-snippet-img-container">
                <img class="snippet__image post-thumbnail" 
                    src="{{ post.data.thumbnail }}" 
                    alt="{{ post.data.gallery[0].alt }}" 
                    title="{{ post.data.gallery[0].title }}" 
                    loading="lazy">
            </div>
        </a>
        <h4 class="works-snippet__title" style="padding-bottom: 5px;">
            <a href="{{ post.url }}" title="{{ post.data.title }}" aria-label="Read more about {{ post.data.title }}" class="postURL">{{ post.data.title }}</a>
        </h4>
        <p class="snippet__meta" aria-label="Date published" style="padding-bottom: 5px;"><span>{{ post.date | postDate }}</span></p>
        <p class="snippet__body" aria-label="Blog post description">{{ post.data.description }}</p>
    </article>
</li>