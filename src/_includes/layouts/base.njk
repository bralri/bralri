<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-M5WMJG46JF"></script>
        <script>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());

          gtag('config', 'G-M5WMJG46JF');
        </script>
        
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="author" content="{{ site.authorName }}">
        <meta name="Description" content="{{ description }}">

        <meta property="og:title" content="{{ title }}">
        <meta property="og:type" content="article">
        <meta property="og:url" content="{{ rootURL }}{{ page.url }}">
        <meta property="og:description" content="{{ description }}">
        <meta property="og:image" content="{{ rootURL }}{{ thumbnail }}">
        <meta property="og:image:alt" content="{{ description }}">

        <meta name="twitter:card" content="summary"/>
        <meta name="twitter:site" content="@bryanridpath"/>
        <meta name="twitter:title" content="{{ title }}"/>
        <meta name="twitter:description" content="{{ description }}"/>
        <meta name="twitter:image" content="{{ rootURL }}{{ thumbnail }}"/>
        <meta name="twitter:creator" content="@bryanridpath">

        <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
        <link rel="stylesheet" href="/css/all.min.css">

        <link rel="apple-touch-icon" sizes="180x180" href="/assets/icons/apple-touch-icon-180x180.png">
        <link rel="apple-touch-icon" sizes="57x57" href="/assets/icons/apple-touch-icon-57x57.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/assets/icons/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/assets/icons/favicon-16x16.png">
        <link rel="manifest" href="/site.webmanifest">
        <link rel="mask-icon" href="/assets/icons/safari-pinned-tab.svg" color="#00a300">
        <meta name="msapplication-TileColor" content="#00a300">
        <meta name="theme-color" content="#00a300">

        <link rel="alternate" type="application/rss+xml" title="bralri updates" href="{{ rootURL }}/rss.xml">

        <script type="application/ld+json">
          {
            "@context": "https://schema.org/",
            "@type": "{{ type }}",
            "headline": "{{ title }}",
            "url": "{{ rootURL }}{{ page.url }}",
            "datePublished": "{{ date | postDate }}",
            "description": "{{ description }}",
            "author": {
              "@type": "Person",
              "name": "{{ site.authorName }}",
              "url": "{{ rootURL }}"
            },
            "image": [
                {%- for image in gallery -%}
                    {
                        "@type": "ImageObject",
                        "url": "{{ rootURL }}{{ image.url }}",
                        "contentURL": "{{ rootURL }}{{ image.url }}",
                        "creditText": "{{ image.title }}",
                        "creator": {
                            "@type": "Person",
                            "name": "{{ site.authorName }}"
                        },
                        "copyrightNotice": "{{ site.authorName }}"
                    }{% if not loop.last and loop.index != gallery|length %},{% endif %}
                {%- endfor -%}
            ],
            "video": [
              {%- for media in video -%}
                  {
                      "@type": "VideoObject",
                      "name": "{{ media.name }}",
                      "description": "{{ media.description }}",
                      "thumbnailUrl": "{{ rootURL }}{{ media.thumbnail }}",
                      "uploadDate": "{{ date | postDate }}",
                      "duration": "{{ media.duration }}",
                      "contentUrl": "{{ rootURL }}{{ media.url }}",
                      "embedUrl": "{{ rootURL }}{{ media.url }}"
                  }{% if not loop.last and loop.index != video|length %},{% endif %}
              {%- endfor -%}
            ]        
          }
        </script>
        <title>{{ title }}</title>
    </head>
    <body>

          {% include 'layouts/header.njk' %}

          <main>
            {{ content | safe }}
          </main>
          
          {% include 'layouts/footer.njk'%}

          <script src="/js/navigation.min.js"></script>
          <script src="/js/directory.min.js"></script>
    </body>
</html>