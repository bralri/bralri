<li>
    <article class="works-snippet">
        <a href="{{ post.url }}" class="works-snippet__image" aria-label="Read more about {{ post.data.title }}">
            <div class="works-snippet-img-container">
                <img class="works-snippet__image post-thumbnail" 
                    src="{{ post.data.thumbnail }}" 
                    alt="{{ post.data.gallery[0].alt }}" 
                    title="{{ post.data.gallery[0].title }}">
            </div>
        </a>
        <h4 class="works-snippet__title" title="{{ post.data.gallery[0].title }}" >
            <a href="{{ post.url }}"  aria-label="Read more about {{ post.data.title }}" class="postURL">{{ post.data.title }} {{ post.data.year }}</a>
        </h4>
    </article>
</li>